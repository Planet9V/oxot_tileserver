{
  "version": 8,
  "name": "OXOT Infrastructure",
  "sources": {
    "osm-infra": {
      "type": "vector",
      "url": "mbtiles://{osm-infrastructure}"
    },
    "geonames": {
      "type": "vector",
      "url": "mbtiles://{geonames-cities}"
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#1a1a2e"
      }
    },
    {
      "id": "power-lines",
      "type": "line",
      "source": "osm-infra",
      "source-layer": "power_lines",
      "minzoom": 4,
      "paint": {
        "line-color": "#ff4444",
        "line-width": ["interpolate", ["linear"], ["zoom"], 4, 0.5, 10, 2, 14, 4],
        "line-opacity": 0.8
      }
    },
    {
      "id": "pipelines",
      "type": "line",
      "source": "osm-infra",
      "source-layer": "pipelines",
      "minzoom": 6,
      "paint": {
        "line-color": "#ff8800",
        "line-width": ["interpolate", ["linear"], ["zoom"], 6, 0.5, 14, 3],
        "line-opacity": 0.7,
        "line-dasharray": [4, 2]
      }
    },
    {
      "id": "substations",
      "type": "circle",
      "source": "osm-infra",
      "source-layer": "substations",
      "minzoom": 8,
      "paint": {
        "circle-color": "#ffcc00",
        "circle-radius": ["interpolate", ["linear"], ["zoom"], 8, 2, 14, 8],
        "circle-stroke-color": "#000000",
        "circle-stroke-width": 1,
        "circle-opacity": 0.85
      }
    },
    {
      "id": "generators",
      "type": "circle",
      "source": "osm-infra",
      "source-layer": "generators",
      "minzoom": 6,
      "paint": {
        "circle-color": "#00cc66",
        "circle-radius": ["interpolate", ["linear"], ["zoom"], 6, 3, 14, 10],
        "circle-stroke-color": "#003300",
        "circle-stroke-width": 1,
        "circle-opacity": 0.9
      }
    },
    {
      "id": "water-treatment",
      "type": "circle",
      "source": "osm-infra",
      "source-layer": "water_treatment",
      "minzoom": 8,
      "paint": {
        "circle-color": "#3399ff",
        "circle-radius": ["interpolate", ["linear"], ["zoom"], 8, 3, 14, 9],
        "circle-stroke-color": "#001a33",
        "circle-stroke-width": 1,
        "circle-opacity": 0.85
      }
    },
    {
      "id": "telecom-masts",
      "type": "circle",
      "source": "osm-infra",
      "source-layer": "telecom_masts",
      "minzoom": 10,
      "paint": {
        "circle-color": "#cc66ff",
        "circle-radius": ["interpolate", ["linear"], ["zoom"], 10, 2, 14, 6],
        "circle-stroke-color": "#330066",
        "circle-stroke-width": 1,
        "circle-opacity": 0.75
      }
    },
    {
      "id": "cities-label",
      "type": "symbol",
      "source": "geonames",
      "source-layer": "cities",
      "minzoom": 4,
      "layout": {
        "text-field": "{name}",
        "text-size": ["interpolate", ["linear"], ["zoom"], 4, 10, 12, 16],
        "text-anchor": "top",
        "text-offset": [0, 0.5]
      },
      "paint": {
        "text-color": "#ffffff",
        "text-halo-color": "#000000",
        "text-halo-width": 1.5
      }
    }
  ]
}
